@model IList<Exam.Web.Models.TicketViewModel>
@{
    ViewBag.Title = "Home Page";
}
<h1>Ticketing System</h1>

<div class="row-fluid">
    @if (@Model != null)
    {
        for (int i = 0; i < Model.Count(); i++)
        {
            var ticket = Model[i];

            <div class="span4">
                <h3>@ticket.Title</h3>
                <p><strong>Category:</strong> @ticket.Category</p>
                <p><strong>Author:</strong> @ticket.Author</p>
                <p>@ticket.Comments.Count comment(s)</p>
                <p><a class="btn" href="@Url.Action("Details", "Tickets", new { ticket.Id })">More details</a></p>

            </div>

            if (i > 0 && (i + 1) % 3 == 0)
            {
                @:</div>
            @:<div class="row-fluid">
        }
        }
    }

</div>